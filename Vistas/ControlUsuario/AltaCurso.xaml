<UserControl x:Class="Vistas.ControlUsuario.AltaCurso"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="375" d:DesignWidth="803">
    <Grid Height="720" Width="803">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*" />
            <ColumnDefinition Width="363*" />
        </Grid.ColumnDefinitions>
        <Label Content="Nombre:" Margin="18,12,282,669"  Style="{StaticResource CustomLabel}" />
        <TextBox Name="txtNombre" Style="{StaticResource ResourceKey=txt_plantillaStyle}" Margin="118,16,53,664" />

        <Label Content="Descripción:" Margin="15,22,272,670" Grid.Column="1"  Style="{StaticResource CustomLabel}"/>
        <TextBox Name="txtDescripcion" Style="{StaticResource ResourceKey=txt_plantillaStyle}" Margin="119,16,37,664" Grid.Column="1" />

        <Label Content="Cupo:" Margin="18,75,273,612"  Style="{StaticResource CustomLabel}"/>
        <TextBox Name="txtCupo" Style="{StaticResource ResourceKey=txt_plantillaStyle}" Margin="116,78,53,602" />

        <Label Content="Fecha Inicio:" Margin="12,142,259,0" Height="30" VerticalAlignment="Top"  Style="{StaticResource CustomLabel}"/>
        <DatePicker Name="dpFechaInicio" Margin="118,138,16,542" 
                    Style="{StaticResource ResourceKey=CustomDatePicker}" />

        <Label Content="Fecha Fin:" Margin="15,137,290,551" Grid.Column="1"  Style="{StaticResource CustomLabel}"/>
        <DatePicker Name="dpFechaFin" Margin="0,127,12,553" Grid.Column="1" HorizontalAlignment="Right" Width="249" 
                    Style="{StaticResource ResourceKey=CustomDatePicker}"/>

        <Label Content="Tipo Estado:" Margin="18,205,267,486"  Style="{StaticResource CustomLabel}"/>
        <ComboBox x:Name="cmbTipoEstado"
          SelectionChanged="cmbTipoEstado_SelectionChanged" Style="{StaticResource CustomComboBox}" Margin="118,194,17,486">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📂" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding Esty_Nombre}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Content="Estado:" Margin="15,203,288,488" Grid.Column="1"  Style="{StaticResource CustomLabel}" />
        <ComboBox x:Name="cmbEstado" Style="{StaticResource CustomComboBox}" Grid.Column="1" Margin="119,194,12,486">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✅" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding Est_Nombre}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>



        <Label Content="Docente (ID):" Margin="12,256,275,430"  Style="{StaticResource CustomLabel}"/>
        <ComboBox x:Name="cmbDocente" Style="{StaticResource CustomComboBox}" Margin="118,259,17,421">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👤" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding Doc_Nombre}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Name="btnGuardar" Content="Guardar"  Style="{StaticResource ResourceKey=btnAceptar}" Margin="230,321,37,358"
                Click="btnGuardar_Click"></Button>
        <Button Name="btnCancelar" Content="Cancelar"  Style="{StaticResource ResourceKey=btnCancelar}" Margin="38,322,243,359"
                 Click="btnCancelar_Click" Grid.Column="1"></Button>

    </Grid>
</UserControl>
