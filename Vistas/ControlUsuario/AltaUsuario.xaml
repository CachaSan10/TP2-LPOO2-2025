<UserControl x:Class="Vistas.ControlUsuario.AltaUsuario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="349" d:DesignWidth="519"
             Background="{StaticResource FondoBrush}">

    <Border Margin="20" CornerRadius="10" Background="White" BorderBrush="{StaticResource BordeBrush}" BorderThickness="1" Width="476" Height="297">
        <Grid Margin="30" Height="246">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            

            <!-- NOMBRE DE USUARIO -->
            <Label Content="Nombre Usuario:" Grid.Row="1" Grid.Column="0" 
                   Style="{StaticResource CustomLabel}" 
                   VerticalAlignment="Center" Height="45" Margin="0,0,10,15"/>
            <TextBox Name="txtNombreUsuario" Grid.Row="1" Grid.Column="1" 
                     Height="45" Margin="0,0,0,15"
                     Style="{StaticResource txt_plantillaStyle}" 
                     VerticalAlignment="Center"/>

            <!-- CONTRASEÑA -->
            <Label Content="Contraseña:" Grid.Row="2" Grid.Column="0" 
                   Style="{StaticResource CustomLabel}" 
                   VerticalAlignment="Center" Height="45" Margin="0,0,10,15"/>
            <TextBox Name="txtPassword" Grid.Row="2" Grid.Column="1" 
                     Height="45" Margin="0,0,0,15"
                     Style="{StaticResource txt_plantillaStyle}" 
                     VerticalAlignment="Center"/>

            <!-- APELLIDO -->
            <Label Content="Apellido:" Grid.Row="3" Grid.Column="0" 
                   Style="{StaticResource CustomLabel}" 
                   VerticalAlignment="Center" Height="45" Margin="0,0,10,15"/>
            <TextBox Name="txtApellido" Grid.Row="3" Grid.Column="1" 
                     Height="45" Margin="0,0,0,15"
                     Style="{StaticResource txt_plantillaStyle}" 
                     VerticalAlignment="Center"/>

            <!-- NOMBRE -->
            <Label Content="Nombre:" Grid.Row="4" Grid.Column="0" 
                   Style="{StaticResource CustomLabel}" 
                   VerticalAlignment="Center" Height="45" Margin="0,0,10,15"/>
            <TextBox Name="txtNombre" Grid.Row="4" Grid.Column="1" 
                     Height="45" Margin="0,0,0,15"
                     Style="{StaticResource txt_plantillaStyle}" 
                     VerticalAlignment="Center"/>

            

        </Grid>
    </Border>

</UserControl>