<UserControl x:Class="Vistas.ControlUsuario.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="155" Width="281" >
    <Grid Height="422" Width="483">
        
        <Image Source="../Images/usuario.png" Width="53" Height="40" Margin="12,12,418,370" />
        <TextBox Name="txtUsuario" 
                     Width="200"
         Style="{StaticResource ResourceKey=txt_plantillaStyle}" Margin="71,12,212,370" />
        <Image Source="../Images/password.png" Width="53" Height="40" Margin="12,58,418,324" />
        <PasswordBox Name="txtPassword" Width="200" Margin="70,57,213,322"
             Style="{StaticResource ResourceKey=pwd_plantillaStyle}"></PasswordBox>
        <Button Name="btnIngresar" Content="Ingresar"  Style="{StaticResource ResourceKey=btnAceptar}" Margin="50,114,349,278"
                Click="btnIngresar_Click"></Button>
        <Button Name="btnCancelar" Content="Salir"  Style="{StaticResource ResourceKey=btnCancelar}" Margin="154,114,245,278"
                 Click="btnSalir_Click"></Button>

    </Grid>
</UserControl>
