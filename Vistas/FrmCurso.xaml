<Window x:Class="Vistas.FrmCurso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alta de Curso"
        Height="450" Width="450"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Background="Pink">

    <Window.Resources>
        <!-- Estilo para Botón Guardar (verde al pasar el mouse) -->
        <Style x:Key="GuardarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Green"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0A7A0A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Botón Cancelar (rojo al pasar el mouse) -->
        <Style x:Key="CancelarButtonStyle" TargetType="Button" BasedOn="{StaticResource GuardarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Red"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF8A0000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nombre -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
            <Label Content="Nombre:" Width="120"/>
            <TextBox Name="txtNombre" Width="250"/>
        </StackPanel>

        <!-- Descripción -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <Label Content="Descripción:" Width="120"/>
            <TextBox Name="txtDescripcion" Width="250"/>
        </StackPanel>

        <!-- Cupo -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5">
            <Label Content="Cupo:" Width="120"/>
            <TextBox Name="txtCupo" Width="250"/>
        </StackPanel>

        <!-- Fecha inicio -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="5">
            <Label Content="Fecha Inicio:" Width="120"/>
            <DatePicker Name="dpFechaInicio" Width="250"/>
        </StackPanel>

        <!-- Fecha fin -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="5">
            <Label Content="Fecha Fin:" Width="120"/>
            <DatePicker Name="dpFechaFin" Width="250"/>
        </StackPanel>

        <!-- Estado (Est_ID) -->
        <!-- Tipo de Estado -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="5">
            <Label Content="Tipo Estado:" Width="120"/>
            <ComboBox Name="cmbTipoEstado" Width="250" SelectionChanged="cmbTipoEstado_SelectionChanged"/>
        </StackPanel>

        <!-- Estado -->
        <StackPanel Orientation="Horizontal" Grid.Row="7" Margin="5">
            <Label Content="Estado:" Width="120"/>
            <ComboBox Name="cmbEstado" Width="250"/>
        </StackPanel>
        <!-- Docente (Doc_ID) -->
        <StackPanel Orientation="Horizontal" Grid.Row="8" Margin="5">
            <Label Content="Docente (ID):" Width="120"/>
            <ComboBox Name="cmbDocente" Width="250"></ComboBox>
        </StackPanel>

        <!-- Botones -->
        <Grid Grid.Row="9" Margin="10" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Name="btnGuardar" Content="Guardar" Width="120" Height="35" Margin="10"
                    Grid.Column="0" Style="{StaticResource GuardarButtonStyle}" Click="btnGuardar_Click"/>
            <Button Name="btnCancelar" Content="Cancelar" Width="120" Height="35" Margin="10"
                    Grid.Column="1" Style="{StaticResource CancelarButtonStyle}" Click="btnCancelar_Click"/>
        </Grid>
    </Grid>
</Window>
