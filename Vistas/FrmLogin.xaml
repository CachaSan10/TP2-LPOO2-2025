<Window x:Class="Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Sistema de Cursos" Height="411" Width="403"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"  Background="Pink">

    <Window.Resources>
        <!-- Estilo para Botón Ingresar (verde al pasar el mouse) -->
        <Style x:Key="IngresarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Green"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0A7A0A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Botón Salir (rojo al pasar el mouse) -->
        <Style x:Key="SalirButtonStyle" TargetType="Button" BasedOn="{StaticResource IngresarButtonStyle}">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Red"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF8A0000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="CLUB DEPORTIVO LUJAN" 
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="76,0,50,76" Height="23" Width="214" />
        <Image Source="/Images/logo-lujan.png"
               Width="79" Height="70" HorizontalAlignment="Center" Margin="132,29,130,0" />

        <!-- Usuario -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,14,0,27" Height="70">
            <Image Source="/Images/usuario.png" Width="53" Height="40"/>
            <TextBox Name="txtUsuario" 
         Width="250" MinWidth="150" Margin="10,0,0,0"
         Height="40"
         FontSize="18"
         VerticalContentAlignment="Center" />
        </StackPanel>

        <!-- Contraseña -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <Image Source="/Images/password.png" Width="53" Height="40"/>
            <PasswordBox Name="txtPassword" 
             Width="250" MinWidth="150" Margin="10,0,0,0"
             Height="40"
             FontSize="18"
             VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Name="btnIngresar" Content="Ingresar" Width="100" Margin="10"
                    Style="{StaticResource IngresarButtonStyle}" Click="btnIngresar_Click"/>
            <Button Name="btnSalir" Content="Salir" Width="100" Margin="10"
                    Style="{StaticResource SalirButtonStyle}" Click="btnSalir_Click"/>
        </StackPanel>
    </Grid>
</Window>
