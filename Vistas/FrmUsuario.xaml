<Window x:Class="Vistas.FrmUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.ControlUsuario"
        Title="FrmUsuario" Height="496" Width="642"
        Background="#f8f0ec">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Fila 0: Título y logo -->
            <RowDefinition Height="*"/>
            <!-- Fila 1: Control de usuario -->
            <RowDefinition Height="Auto"/>
            <!-- Fila 2: Botones -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- TÍTULO PRINCIPAL - OCUPA AMBAS COLUMNAS PERO SE CENTRA -->
        <Label Content="ALTA DE USUARIO" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Style="{StaticResource LabelTitulo}" 
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Margin="0,10,0,10"/>

        <!-- LOGO EN ESQUINA SUPERIOR DERECHA -->
        <Image Source="/Images/logo-lujan.png" Grid.Row="0" Grid.Column="1"
               Width="60" Height="60" Margin="0,10,10,10"
               HorizontalAlignment="Right" VerticalAlignment="Center"/>

        <!-- CONTROL DE USUARIO -->
        <control:AltaUsuario x:Name="altaUsuario" Grid.Row="1" Grid.ColumnSpan="2"
                           Margin="20,10,20,10"/>

        <!-- BOTONES -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Center" 
                    Margin="0,10,0,15">
            <Button Name="btnGuardar" Content="Guardar" Width="120" Height="35"
                    Style="{StaticResource btnAceptar}" Click="btnGuardar_Click" 
                    Margin="0,0,10,0"/>
            <Button Name="btnCancelar" Content="Cancelar" Width="120" Height="35"
                    Style="{StaticResource btnCancelar}" Click="btnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>