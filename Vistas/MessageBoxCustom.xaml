<Window x:Class="Vistas.MessageBoxCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        Height="200" Width="300">

    <Border Background="White" BorderBrush="#990506" BorderThickness="2" CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="txtMessage" TextWrapping="Wrap" 
                      TextAlignment="Center" VerticalAlignment="Center"
                      FontSize="16" Margin="10"/>

            <Button x:Name="btnAceptar" Content="Aceptar" Grid.Row="1"
                   Width="100" Height="35" HorizontalAlignment="Center"
                   Click="btnAceptar_Click" Margin="0,10,0,0"/>
        </Grid>
    </Border>
</Window>