<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CustomComboBox" TargetType="ComboBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>

                        <!-- Área que muestra el item seleccionado -->
                        <Border x:Name="Bd"
                                Grid.Column="0"
                                BorderBrush="#990506"
                                BorderThickness="2"
                                Background="White"
                                Padding="4">
                            <!-- SelectionBoxItem muestra el texto del elemento seleccionado -->
                            <ContentPresenter Margin="4,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                        </Border>

                        <!-- Toggle-button que abre/cierra el popup -->
                        <ToggleButton x:Name="ToggleButton"
                                      Grid.Column="1"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Background="#990506"
                                      BorderThickness="0"
                                      Cursor="Hand">
                            <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="White"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </ToggleButton>

                        <!-- Popup con los items: nombre PART_Popup y ItemsHost -->
                        <Popup x:Name="PART_Popup"
                               Placement="Bottom"
                               IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               AllowsTransparency="True"
                               Focusable="False"
                               StaysOpen="False"
                               PopupAnimation="Slide">
                            <Border Background="White"
                                    BorderBrush="#990506"
                                    BorderThickness="2"
                                    CornerRadius="6"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer MaxHeight="220">
                                    <!-- El ItemsPresenter es lo que hace que aparezcan los ComboBoxItem -->
                                    <StackPanel IsItemsHost="True"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="HasItems" Value="False">
                            <Setter TargetName="PART_Popup" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Background" Value="#EEE"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#600C0C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>